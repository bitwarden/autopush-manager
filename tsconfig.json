{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "outDir": "build/",
    "rootDir": "./",
    "moduleResolution": "node16",
    "module": "Node16",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,

    "lib": ["es2017", "dom"],
    "types": ["node", "jest"],
  },
  "include": ["index.ts", "src", "spec"],
  "files": ["./test.setup.ts"],
  "compileOnSave": false
}
